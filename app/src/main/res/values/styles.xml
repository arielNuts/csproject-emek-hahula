<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base style for all buttons in the keyboard -->
    <style name="LetterButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:background">@drawable/gray_button_bg</item>
        <item name="backgroundTint">@null</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:padding">0dp</item>
        <item name="android:minWidth">36dp</item>
        <item name="android:minHeight">36dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="rippleColor">@android:color/transparent</item>
    </style>

    <!-- Style for action buttons (Enter and Delete) -->
    <style name="ActionButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:background">@drawable/action_button_bg</item>
        <item name="backgroundTint">@null</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:padding">0dp</item>
        <item name="android:minWidth">36dp</item>
        <item name="android:minHeight">36dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="rippleColor">@android:color/transparent</item>
    </style>

    <!-- Optional: Style for correct letter buttons (green) -->
    <style name="CorrectLetterButton" parent="LetterButton">
        <item name="android:background">@drawable/green_button_bg</item>
        <item name="backgroundTint">@null</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <!-- Optional: Style for misplaced letter buttons (yellow) -->
    <style name="MisplacedLetterButton" parent="LetterButton">
        <item name="android:background">@drawable/yellow_button_bg</item>
        <item name="backgroundTint">@null</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <!-- Optional: Style for wrong letter buttons (dark gray) -->
    <style name="WrongLetterButton" parent="LetterButton">
        <item name="android:background">@drawable/dark_gray_button_bg</item>
        <item name="backgroundTint">@null</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>
</resources>